.about-container {
  padding: 30rpx;
  box-sizing: border-box;
  background: #fff;
}

.intro-section {
  margin-bottom: 50rpx;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.logo {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 0;
}

.desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 24rpx;
  text-align: left;
  padding: 0 10rpx;
  white-space: pre-wrap;
}

.privacy {
  font-size: 26rpx;
  color: #07c160;
  line-height: 1.6;
  padding: 16rpx;
  background: rgba(7, 193, 96, 0.1);
  border-radius: 8rpx;
  text-align: left;
  margin: 0 10rpx;
}

.dot {
  color: #07c160;
  margin-right: 10rpx;
}

.reward-section {
  text-align: center;
  margin-bottom: 50rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  color: #333;
}

.reward-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.reward-qrcode {
  width: 360rpx;
  height: 360rpx;
}

.info-block {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 20rpx;
  margin: 0 10rpx 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.contact-block {
  cursor: pointer;
}

.info-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.info-value {
  font-size: 28rpx;
  color: #666;
}

.contact-block .info-value {
  color: #07c160;
}

.arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #7c8d84;
  border-right: 4rpx solid #7c8d84;
  transform: rotate(45deg);
} 