.payment-plan {
  padding: 20rpx;
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.loan-overview {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
}

.loan-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.loan-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.loan-amount {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: 500;
}

.loan-details {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.plan-table {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  flex: 1;
  display: flex;
  flex-direction: column;
}

.table-header {
  display: flex;
  background: #f5f5f5;
  padding: 20rpx 0;
  flex-shrink: 0;
}

.th {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.table-body {
  flex: 1;
  overflow-y: auto;
}

.tr {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.td {
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #333;
}

.summary {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  flex-shrink: 0;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}

.summary-item text {
  font-size: 28rpx;
  color: #666;
}

.summary-item .amount {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: 500;
} 